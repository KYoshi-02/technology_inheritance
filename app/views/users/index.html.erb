<h1>同じ会社のユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>氏名</th>
      <th>ニックネーム</th>
      <th>メール</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.nick_name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>