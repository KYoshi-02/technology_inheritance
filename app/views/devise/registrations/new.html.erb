<h2 class="text-2xl font-bold mb-6 text-center text-blue-600">アカウント新規登録</h2>

<%= form_with model: resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6 max-w-xl mx-auto bg-white p-8 rounded shadow", local: true do |f| %>
  <% if resource.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h3 class="font-semibold">エラーがあります：</h3>
      <ul class="list-disc pl-5">
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "氏名（フルネーム）", class: "block text-gray-700 mb-1" %>
    <%= f.text_field :name, required: true, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :nick_name, "ニックネーム", class: "block text-gray-700 mb-1" %>
    <%= f.text_field :nick_name, required: true, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :email, "メールアドレス", class: "block text-gray-700 mb-1" %>
    <%= f.email_field :email, required: true, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :password, "パスワード", class: "block text-gray-700 mb-1" %>
    <%= f.password_field :password, required: true, autocomplete: "new-password", class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :password_confirmation, "パスワード（確認）", class: "block text-gray-700 mb-1" %>
    <%= f.password_field :password_confirmation, required: true, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :company_name, "会社名", class: "block text-gray-700 mb-1" %>
    <%= f.text_field :company_name, required: true, class: "w-full border rounded px-3 py-2" %>
  </div>

  <div class="text-center">
    <%= f.submit "登録する", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded" %>
  </div>
<% end %>

<div class="text-center mt-6">
  <%= link_to "すでにアカウントをお持ちの方はこちら（ログイン）", new_user_session_path, class: "text-blue-500 hover:underline" %>
</div>
