<div class="max-w-4xl mx-auto mt-10 px-6">
  <div class="bg-white rounded-xl shadow-md p-8">    
    <% if user_signed_in? %>
      <div class="container mx-auto px-4 py-8 text-center">
        <h2 class="text-2xl font-bold mb-2">SkillLinkへようこそ！</h2>
        <p class="text-xl mb-8"><%= current_user.name %> さん、こんにちは！</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 justify-center mb-8">
          <%= link_to "ノウハウ一覧", knowhow_posts_path, class: "block bg-blue-100 hover:bg-blue-200 text-blue-800 font-semibold py-6 px-6 rounded-xl shadow" %>
          <%= link_to "クイズ一覧", quizzes_path, class: "block bg-green-100 hover:bg-green-200 text-green-800 font-semibold py-6 px-6 rounded-xl shadow" %>

          <% if current_user.admin? %>
            <%= link_to "ユーザー管理", users_path, class: "block bg-purple-100 hover:bg-purple-200 text-purple-800 font-semibold py-6 px-6 rounded-xl shadow" %>
            <%= link_to "クイズを作成する", new_quiz_path, class: "block bg-yellow-100 hover:bg-yellow-200 text-yellow-800 font-semibold py-6 px-6 rounded-xl shadow" %>
          <% end %>

          <%= link_to "ノウハウ投稿", new_knowhow_post_path, class: "block bg-pink-100 hover:bg-pink-200 text-pink-800 font-semibold py-6 px-6 rounded-xl shadow" %>
        </div>

        <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% else %>
      <p class="text-center mb-4">ログインまたは新規登録してください。</p>
      <div class="flex justify-center gap-4">
        <%= link_to "ログイン", new_user_session_path, class: "text-blue-600 hover:underline" %>
        <%= link_to "新規登録", new_user_registration_path, class: "text-blue-600 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>