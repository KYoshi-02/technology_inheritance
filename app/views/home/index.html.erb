<div class="max-w-screen-md mx-auto mt-16 px-4">
  <div class="bg-white rounded-xl shadow-lg p-10">
    <% if user_signed_in? %>
      <h2 class="text-2xl font-bold text-center mb-4">SkillLinkへようこそ！</h2>
      <p class="text-xl text-center mb-10"><%= current_user.name %> さん、こんにちは！</p>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-10">
        <%= link_to "ノウハウ一覧", knowhow_posts_path, class: "block bg-blue-100 hover:bg-blue-200 text-blue-900 text-center font-semibold py-8 px-4 rounded-xl shadow transition" %>
        <%= link_to "クイズ一覧", quizzes_path, class: "block bg-green-100 hover:bg-green-200 text-green-900 text-center font-semibold py-8 px-4 rounded-xl shadow transition" %>

        <% if current_user.admin? %>
          <%= link_to "ユーザー管理", users_path, class: "block bg-purple-100 hover:bg-purple-200 text-purple-900 text-center font-semibold py-8 px-4 rounded-xl shadow transition" %>
          <%= link_to "クイズを作成する", new_quiz_path, class: "block bg-yellow-100 hover:bg-yellow-200 text-yellow-900 text-center font-semibold py-8 px-4 rounded-xl shadow transition" %>
        <% end %>
      </div>

      <div class="text-center">
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-6 rounded shadow" %>
      </div>
    <% else %>
      <p class="text-center mb-4">ログインまたは新規登録してください。</p>
      <div class="flex justify-center gap-4">
        <%= link_to "ログイン", new_user_session_path, class: "text-blue-600 hover:underline" %>
        <%= link_to "新規登録", new_user_registration_path, class: "text-blue-600 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>