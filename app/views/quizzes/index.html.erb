<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">クイズ一覧</h1>    
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    <% @quizzes.each do |quiz| %>
      <div class="bg-white rounded-xl shadow-md p-4 hover:shadow-lg transition">
        <h2 class="text-lg font-semibold mb-2">
          <%= link_to quiz.question, quiz_path(quiz), class: "hover:underline text-blue-600" %>
        </h2>
        <p class="text-sm text-gray-600 mb-1">作成者: <%= quiz.user.nick_name %></p>
        <p class="text-sm text-gray-600">作成日: <%= quiz.created_at.strftime("%Y年%m月%d日") %></p>
      </div>
    <% end %>
  </div>
</div>