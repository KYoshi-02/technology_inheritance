<h1 class="text-2xl font-bold text-center mb-6">クイズを投稿する</h1>

<div class="max-w-2xl mx-auto bg-white p-6 rounded shadow">
  <%= form_with(model: @quiz, local: true) do |form| %>
    <% if @quiz.errors.any? %>
      <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <h2 class="font-bold mb-2"><%= pluralize(@quiz.errors.count, "件のエラー") %>があります:</h2>
        <ul class="list-disc list-inside">
          <% @quiz.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :question, "問題文", class: "block font-semibold mb-1" %>
      <%= form.text_area :question, rows: 5, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :correct_answer, "正解", class: "block font-semibold mb-1" %>
      <%= form.text_field :correct_answer, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :explanation, "解説（任意）", class: "block font-semibold mb-1" %>
      <%= form.text_area :explanation, rows: 3, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :image, "画像（任意）", class: "block font-semibold mb-1" %>
      <%= form.file_field :image, class: "w-full" %>
    </div>

    <div class="text-center">
      <%= form.submit "投稿する", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>

<div class="text-center mt-6">
  <%= link_to "一覧に戻る", quizzes_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded inline-block" %>
</div>